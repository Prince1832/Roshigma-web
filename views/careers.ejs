                <%- include('partials/contact') %>
                    <%- include('partials/footer') %>


                        <script>
                            document.addEventListener('DOMContentLoaded', function () {
                                var parent = document.querySelector(".current-opening__process");
                                var items = parent.querySelectorAll(".step");
                                var loadMoreBtn = document.getElementById("load-more-comments");
                                var maxItems = 3;
                                var hiddenClass = "visually-hidden";

                                // Add visually hidden class to items beyond maxItems
                                items.forEach(function (item, idx) {
                                    if (idx > maxItems - 1) {
                                        item.classList.add(hiddenClass);
                                    }
                                });

                                // On click of show more button, show more = maxItems
                                // If there are none left to show, hide the show more button
                                loadMoreBtn.addEventListener("click", function (e) {
                                    var hiddenItems = parent.querySelectorAll("." + hiddenClass);
                                    hiddenItems.forEach(function (item, idx) {
                                        if (idx < maxItems) {
                                            item.classList.remove(hiddenClass);
                                        }
                                    });

                                    // Hide button if no more to show
                                    if (parent.querySelectorAll("." + hiddenClass).length === 0) {
                                        loadMoreBtn.style.display = 'none';
                                    }
                                });
                            });
                        </script>
</body>


</html>