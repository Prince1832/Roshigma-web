<body>
    <%- include('partials/navbar') %>


        <!-- !Service Banner -->
        <section class="bg-container --bg-img-container career-banner m-b-50 m-t-50">
            <h1 class="h1 fc-w fw6 t-upper tc">Career with rhosigma</h1>
            <!-- *BreadCrumb -->
            <div class="container breadcrumb">
                <a href="/">Home</a>
                <a class="bc-active">Careers</a>
            </div>
