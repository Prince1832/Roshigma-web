        <%- include('partials/metas') %>
            <style>
                .thank-you {
                    padding: 0 10px;
                    height: calc(100vh - 100px);
                    display: grid;
                    align-content: center;
                    justify-content: center;
                    text-align: center;
                    gap: 20px;
                }

                .thank-you>img {
                    margin: 0 auto;
                    display: block;
                }

                .thank-you-socials {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    gap: 20px;
                }

                .thank-you-socials a {
                    background: var(--accent);
                    padding: 10px;
                    display: grid;
                    align-items: center;
                    justify-items: center;
                    border-radius: 10px;
                }

                .thank-you>a {
                    background: var(--accent);
                    font-size: 30px;
                    border-radius: 10px;
                    font-weight: 500;
                    padding: 20px 50px;
                    color: #fff;
                    width: fit-content;
                    margin: 20px auto;
                }
            </style>
</head>

<body>
    <%- include('partials/navbar'); -%>
        <div class="thank-you ">
            <img src="/images/thank-you.webp" width="90px" height="90px" alt="Thank You">
            <h1 class="h-0">Thank You...!</h1>
